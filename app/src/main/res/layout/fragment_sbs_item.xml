<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@color/blue"
    tools:context="com.mortenjust.chatappoidssbs.SbsItemFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:background="@color/light_grey">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="709px"
                android:id="@+id/sbs_image"
                android:src="@drawable/smart_reply_a1"
                android:layout_gravity="top"
                android:background="@color/white"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="440px"
            android:src="@drawable/bottom_sheet_2"
            android:id="@+id/bottom_sheet_image"
            />
    </LinearLayout>
</RelativeLayout>
